DROP TABLE IF EXISTS vertex,edge,out,vertex_alt,edge_alt,out_alt,out_gr;


CREATE TABLE vertex(
                  id INTEGER
                );

CREATE TABLE edge(
                  src INTEGER,
                  dest INTEGER,
                  weight INTEGER
                );

